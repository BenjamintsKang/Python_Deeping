def flip(string): # 회문 판별 함수
    flipString = string[::-1] # 문자열을 역순으로 만들어주는 [::-1]
    print('출력 값 : ', flipString)
    if string == flipString:
        print('회문입니다.')
    else:
        print('회문이 아닙니다.')

string = []

string = input('회문을 입력해 주세요: ') # 입력 값 받기

print('입력 값 : ', string)

flip(string) # 받은 입력 값을 회문 판별 함수에 넣는다

